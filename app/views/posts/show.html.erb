<div class="container">
	<div class="form-signin">
		<h2>Show post</h2>
		<p id="notice"><%= notice %></p>

		<p>
		  <b>Name:</b>
		  <%= @post.name %>
		</p>

		<p>
		  <b>Title:</b>
		  <%= @post.title %>
		</p>

		<p>
		  <b>Content:</b>
		  <%= @post.content %>
		</p>


		<%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-large btn-primary' %>
		<%= link_to 'Back', posts_path, :class => 'btn btn-large btn-primary' %>
	</div>
</div>
